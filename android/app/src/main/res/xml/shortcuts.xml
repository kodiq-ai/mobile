<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Long-press app icon shortcuts -->
    <shortcut
        android:shortcutId="review"
        android:enabled="true"
        android:shortcutShortLabel="@string/shortcut_review"
        android:shortcutLongLabel="@string/shortcut_review_long"
        android:icon="@mipmap/ic_launcher">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="ai.kodiq"
            android:targetClass="ai.kodiq.MainActivity"
            android:data="kodiq://review" />
    </shortcut>
    <shortcut
        android:shortcutId="dashboard"
